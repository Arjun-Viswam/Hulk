  
       
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row bg-title">
                    <div class="col-lg-12">
                        <h4 class="page-title">Product Manager</h4>
                        <div class="row">
                            <a href="/admin/add-product" style="float: right;" class="btn btn-success p-3">Add product</a>
                        </div>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- row -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <div class="table-responsive">
                                <table class="table" id="myTable">
                                    <thead>
                                        <tr>
                                            
                                            <th>IMAGE</th>
                                            <th>PRODUCTS</th>
                                            <th>QUANTITY</th>
                                            <th>PRICE</th>
                                            <th>FLAVOUR</th>
                                            <th>OPTIONS</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each products}}
                                        <tr>
                                            
                                            <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}first.jpg"></td>
                                            

                                            <td>{{this.product}}</td>
                                            <td>{{this.quantity}}</td>
                                            <td><i class="fa fa-inr"></i>{{this.price}}</td>
                                            <td>{{this.flavour}}</td>
                                            <td><a href="/admin/delete-product/{{this._id}}" class="fas fa-trash-alt" onclick="return confirm('confirm delete {{this.product}}')"></a>&nbsp; &nbsp;
                                                <a href="/admin/edit-product/{{this._id}}" class="fas fa-edit" ></a></td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </div>
        	
	<!-- /#wrapper -->
       